{
	"compilerOptions": {
        "target": "esnext",
        "module": "commonjs",
        "sourceMap": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "allowJs": true,
        "baseUrl": ".",
        "rootDir": "./src",
        "outDir": "./dist",
        "skipLibCheck": true,
        "isolatedModules": false,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "paths": {
            "~/*": ["src/*"]
        }
    },
	"typeRoots": [
		"node_modules/@types",
		"node_module/phaser/types"
	],
	"types": [
		"phaser"
	],
    "include": [
	    "./src/**/*",
    ],
    "exclude": [
        "node_module"
    ]
}


